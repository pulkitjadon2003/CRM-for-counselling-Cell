    <link
    href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css"
    rel="stylesheet"
/>
    <link rel="stylesheet" href="../../CSS/styleINQ.css">
</head>
<body style="background-color: rgb(170, 207, 240);">
    <div id="info" style="background-color: white; height:170px; width: 400px; position: absolute; right: 0;  " >
      <h6>Admin Credentials</h6>
      Email: pulkitjadon93@gmail.com <br>
      Password:1234
      <h6>User Credentials</h6>
      Email: ironbeastop@gmail.com <br>
      Password:1234
    </div>
    <div id="main position-relative">
        <section class="  py-md-5 py-xl-8" >
            <div class="container position-absolute top-50 start-50 translate-middle " >
              <div class="row justify-content-center">
                <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4 position-relative ">
                  <div class="mb-5 position-relative">
                    
                    <div class="text-center">
                      <h2>User Login</h2>
                    </div>
                     <% if(message.length>0){%>
            <div class="alert alert-danger text-center position-absolute" style="z-index: 1; width: 100%;">
              <%= message%>
            </div>

           <%}%>
                  </div>
                  <div class="card border border-light-subtle rounded-4 shadow-lg">
                    <div class="card-body p-3 p-md-4 p-xl-5">
                      <form action="/login" method="post">
                        <div class="row gy-3 overflow-hidden">
                          <div class="col-12">
                            <div class="form-floating mb-3">
                              <input
                                type="email"
                                class="form-control"
                                name="email"
                                id="email"
                                placeholder="email"
                                required
                              />
                             
                              <label for="email" class="form-label">Email</label>
                            </div>
                          </div>
                          <div class="col-12">
                            <div class="form-floating mb-3">
                              <input
                                type="password"
                                class="form-control"
                                name="password"
                                id="password"
                                value=""
                                placeholder="password"
                                required
                              />
                              <label for="password" class="form-label"
                                >Password</label
                              >
                            </div>
                          </div>
                          <div class="col-12 mb-0">
                            <div
                              class="d-flex gap-2 gap-md-4 flex-column flex-md-row justify-content-md-center"
                            >
                              <a href="/forgot" class="link-secondary text-decoration-none"
                                >Forgot password</a
                              >
                              <a href="/verification" class="link-secondary text-decoration-none"
                                >Email Verification</a
                              >
                              
                            </div>
                          </div>
                          <div class="col-12">
                            <div class="d-grid">
                              <button class="btn btn-lg" style="background-color: rgb(170,207,240);" type="submit">
                                Log in
                              </button>
                            </div>
                          </div>
                          <a align="center" href="/admin/login" class="link-secondary text-decoration-none"
                            >Are you a Admin?</a
                          >
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </section>
    </div>
        

    </div>

    <script src="../../Scripts/script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

   
    
</body>
</html>