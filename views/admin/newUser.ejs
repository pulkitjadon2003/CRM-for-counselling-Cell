  <body style="background-color:rgb(197, 222, 243);">
    <div id="main ">
           <div id="nav" class="navbar">
          
            <div id="logo">
                <img src="/images/ITMGOILogo.png" alt="">
            </div>
            <div id="profile" class="d-flex align-items-center gap-2">
            <h6 class="btn fw-bold" onclick="location.href='/admin/home'">Home</h6>
              <!-- <img class="rounded-circle" width="30" height="30" src="" alt=""> -->
              <h4 class="fs-6 fw-bold"><%= admin.name %></h4>
              <button class="btn btn-danger" onclick="location.href='/admin/logout'">Logout</button>
            </div>
        </div>
        <section class="  py-md-5 py-xl-8" >
            <div class="container " >
              <div class="row justify-content-center">
                <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4">
                
                <div class="text-center">
                  <h2>Add New User</h2>
                </div>
                  <div class="card border border-light-subtle rounded-4 shadow-lg">
                    <div class="card-body p-3 p-md-4 p-xl-5">
                        <form  class="container" action="/admin/new-user" method="post">
                            <div class="form-floating mb-2 ">
                              <input type="text" name="name" class="form-control" id="floatingFN" placeholder="Faculty Name">
                              <label for="floatingFN">Faculty Name</label>
                            </div>
                            <div class="form-floating mb-2 ">
                              <input type="email" name="email" class="form-control" id="floatingEmail" placeholder="email">
                              <label for="floatingEmail">Email address</label>
                            </div>
                            <div class="form-floating mb-2 ">
                              <input type="number" name="mobile" class="form-control" id="floatingMN" placeholder="Mobile Number">
                              <label for="floatingMN">Mobile Number</label>
                            </div>
                          <br>
                          <div class="col-12">
                            <div class="d-grid">
                              <button class="btn btn-lg" style="background-color: rgb(170,207,240);" type="submit">
                                Add User
                              </button>
                            </div>
                          </div>
                          </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </section>
    </div>
    

 
