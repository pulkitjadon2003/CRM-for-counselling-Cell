<%- include('./header.ejs') %>
<h1>Display INQUIRY</h1>
<div >
    <table class="table table-bordered">
        <tr>
            <th>S.No</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Father's Name</th>
            <th>Guardian Mobile No.</th>
            <th>Course</th>
            <th>Branch</th>
            <th>Inquiry Date</th>
            <th class="text-center" >Actions</th>
            
            
        </tr>
        <% i=1 %>
        <% data.forEach(data =>{ %>

            <tr>
                <td><%= i++ %></td>
                <td><%= data.applicantName %></td>
                <td><%= data.email %></td>
                <td><%= data.mobile %></td>
                <td><%= data.fatherName %></td>
                <td><%= data.guardianMobile %></td>
                <td><%= data.courses.course %></td>
                <td ><%= data.courses.branch %></td>
                <td><%= data.registrationDate %></td>


                <td class="d-flex  gap-2 ">
                
                    <form action="/admin/updatestatus/<%= data._id %>" method="post">
                              <button type="submit" name="status" value="Approved" class="btn btn-success">Approved</button>
      <button type="submit" name="status" value="Reject" class="btn btn-danger">Reject</button>
                    </form>
                    

                    
                </td>
                
            </tr>
            <% })%>
    </table>
</div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>

