              <label class="form-check-label" for="RadioMale">
                  <input  class="form-check-input" name="gender" type="radio" value="Male" id="RadioMale" <% if(users.gender == 'Male'){%> checked <% }%>>
                  <span>Male</span>
                </label>
              </div>
              <div class="form-check mx-4">
                <label class="form-check-label" for="RadioFemale">
                  <input  class="form-check-input" name="gender" type="radio" value="Female" id="RadioFemale" <% if(users.gender == 'Female'){%> checked <% }%>>
                  <span>Female</span>
                </label>
              </div>
          </div>
          <div class="form-floating mb-2">
            <textarea type="text"  class="form-control" name="address" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 80px" required><%= users.address %></textarea>
            <label for="floatingTextarea2" class="d-flex">Address<h5 style="color: red;">*</h5></label>
          </div>
        
       

