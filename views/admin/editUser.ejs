<% include('../layouts/header.ejs')  %>

<% if(typeof message !== 'undefined'){%>
    <p style="color: red;">
        <%= message %>
    </p>
        <%}%>


<div class="row">
        
        <form action="/admin/edit-user-inq" method="post" style="display: contents;">
                
                <div id="formInq " class="container col-lg-5 ms-5 ">
                  <p class="fs-4">Student Inquiry Form</p>
                  
                    <div class="form-floating mb-2 ">
                        <input type="text" class="form-control" name="applicantName" value="<%= users.applicantName %>" id="floatingName" placeholder="Applicant Name" >
                        <label for="floatingName">Applicant Name</label>
                      </div>
                      <div class="form-floating mb-2 ">
                        <input type="number" maxlength="10" class="form-control" name="mobile" value="<%= users.mobile %>" id="floatingContact" placeholder="Contact no.">
                        <label for="floatingContact">Contact No.</label>
                      </div>
                      <div class="form-floating mb-2 ">
                        <input type="date" class="form-control" name="dob" id="floatingDOB" value="<%= users.dob %>" placeholder="DOB">
                        <label for="floatingDOB">Date of Birth</label>
                      </div>
                      <div class="form-floating d-flex mb-2 p-1 " >
                        <h6>Gender:</h6>
                        <div class="form-check mx-4">
                          <label class="form-check-label" for="RadioMale">
                              <input class="form-check-input" name="gender" type="radio" value="Male" id="RadioMale">
                              <span>Male</span>
                            </label>
                          </div>
                          <div class="form-check mx-4">
                            <label class="form-check-label" for="RadioFemale">
                              <input class="form-check-input" name="gender" type="radio" value="Female" id="RadioFemale">
                              <span>Female</span>
                            </label>
                          </div>
                      </div>
                      <div class="form-floating mb-2">
                        <textarea type="text" class="form-control" name="address" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 80px"></textarea>
                        <label for="floatingTextarea2">Address</label>
                      </div>
                    
                   

                      <div class="form-floating mb-2">
            <select class="form-select" id="select-course" name="course" aria-label="Floating label select example">
              <option selected>Select Course</option>
             
            </select>
            <label for="floatingSelect">Course</label>
          </div>
          <div class="form-floating mb-2">
            <select class="form-select" id="select-branch" name="branch"  aria-label="Floating label select example" style="display: none;">
              <option selected>Select Branch</option>
              
            </select>
            <label for="floatingSelect" id="branchLabel" style="display: none;">Branch</label>
          </div>

                     
                      
                      
                    </div>
                      <div class="container col-lg-5 ms-5" id="formInq">
                        <div class="form-floating mb-2">
                          <select class="form-select" name="qualifyingDegree" id="floatingSelect" aria-label="Floating label select example">
                            <option selected>Select Qualifying Degree</option>
                            <option value="12th">12th</option>
                            <option value="12th">BTECH</option>
                            <option value="PG">PG</option>
                            <option value="UG">UG</option>
                            <option value="12th">Other</option>
                          </select>
                          <label for="floatingSelect">Qualifying Degree</label>
                        </div>
                        <div class="form-floating mb-2 ">
                          <input type="email" name="email" class="form-control" id="floatingEmail" placeholder="email">
                          <label for="floatingEmail">Email address</label>
                        </div>
                        
                        <div class="form-floating mb-2 ">
                          <input type="text" name="fatherName" class="form-control" id="floatingFN" value="<%= users.fatherName %>" placeholder="Father's Name">
                          <label for="floatingFN">Father's Name</label>
                        </div>
                        <div class="form-floating mb-2">
                          <input type="number"  name="guardianMobile" class="form-control" id="floatingGC" value="<%= users.guardianMobile %>" placeholder="Guardian Contact">
                          <label for="floatingGC">Guardian Contact</label>
                        </div>
                 
                    <div class="form-floating mb-2">
                      <select class="form-select" id="state-select" name="state" aria-label="Floating label select example">
                        <option selected>Select State</option>
                       
                      </select>
                      <label for="floatingSelect">State</label>
                    </div>
                    <div class="form-floating mb-2">
                      <select class="form-select" id="city-select" name="city" aria-label="Floating label select example">
                        <option selected>Select city</option>
                       
                      </select>
                      <label for="floatingSelect">City</label>
                    </div>
                      
                          
                        

                        <div class="form-floating mb-2 mt-2">
                          <select name="inquirySource" class="form-select" id="floatingSelect" aria-label="Floating label select example">
                            <option selected>Select Source</option>
                            <option value="">Social Media</option>
                            <option value="2">News</option>
                            <option value="3">Alumni</option>
                            <option value="4">Friends</option>
                            <option value="5">School/Coaching</option>
                            <option value="6">Holdings</option>
                          </select>
                          <label for="floatingSelect">Source Inquiry</label>
                        </div>

                       
                           <div class="form-floating mb-2 mt-2">
                          <select name="status" class="form-select" id="floatingSelect" aria-label="Floating label select example">
                            <option selected>Select Status</option>
                            <option value="1">Intrested</option>
                            <option value="2">Hold</option>
                            <option value="3">NO</option>
                          
                          </select>
                          <label for="floatingSelect">Inquiry Status</label>
                        </div>

                        <button id="btn" class="btn  " type="submit">Submit</button>
                      </div>
                      </form>
    </div>



    </div>
    <script src="../../Scripts/script.js"></script>
    <script src="../../Scripts/stateCity.js"></script>
    <script src="../../Scripts/inquiryCourse.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
        
        </body>
