        <div class="form-floating mb-2 ">
            <input type="text" class="form-control" name="applicantName" id="floatingName" placeholder="Applicant Name" value="<%= users.applicantName %>" required >
            <label for="floatingName" class="d-flex">Applicant Name<h5 style="color: red;" >*</h5></label>
          </div>
          <div class="form-floating mb-2 ">
            <input type="number" maxlength="10" class="form-control" name="mobile" id="floatingContact" placeholder="Contact no." value="<%= users.mobile %>" required>
            <label for="floatingContact" class="d-flex">Contact No.<h5 style="color: red;">*</h5></label>
          </div>
          <div class="form-floating mb-2 ">
            <input type="date" class="form-control" name="dob" id="floatingDOB" placeholder="DOB" value="<%= users.dob %>" required>
